<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:entries="@array/permuts"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_n"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Введите n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_m"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Введите m"
        app:layout_constraintBottom_toBottomOf="@+id/et_n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_n"
        app:layout_constraintTop_toTopOf="@+id/et_n" />

</androidx.constraintlayout.widget.ConstraintLayout>